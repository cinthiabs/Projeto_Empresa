@model IEnumerable<ProjetoEmpresa.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h3>Pesquisar por <strong>nome</strong> da empresa:</h3>

<form asp-controller="Fornecedor" asp-action="Index" method="post">
    <input class="form-control" name="txtPesquisar" />
    <br />
    <button type="submit" class="btn btn-primary">Pesquisar</button>


</form>

<h3>Cadastrar Fornecedor:</h3>
<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf_cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datahora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.nomeFantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cpf_cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datahora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idfornecedor" class="btn btn-info">Atualizar</a> |
                    <a asp-action="Details" asp-route-id="@item.idfornecedor" class="btn btn-warning">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.idfornecedor" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
